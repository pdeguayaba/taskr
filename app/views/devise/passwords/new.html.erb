<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: { class: 'form-signin' }) do |f| %>
  <%= f.error_notification %>
  <h2 class = 'text-center'>Forgot your password?</h2>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "Email",
                input_html: { class: 'form-control' },
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Reset Password", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
